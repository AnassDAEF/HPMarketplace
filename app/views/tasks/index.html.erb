<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task category</th>
      <th>Task sub category</th>
      <th>Description</th>
      <th>Start date</th>
      <th>Finish date</th>
      <th>Deadline date</th>
      <th>Mission</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_category %></td>
        <td><%= task.task_sub_category %></td>
        <td><%= task.description %></td>
        <td><%= task.start_date %></td>
        <td><%= task.finish_date %></td>
        <td><%= task.deadline_date %></td>
        <td><%= task.mission %></td>
        <td><%= task.user %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

